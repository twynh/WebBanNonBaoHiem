@model IEnumerable<WebBanHangOnline.Models.ShoppingCartItem>


<table class="table">
    <tr class=" text-center">
        <th></th>
        <th>Image</th>
        <th>Product's name</th>
        <th>Category</th>
        <th>Price</th>
        <th style="width:100px;">Quantity</th>
        <th>Total</th>
        <th width="200">

        </th>
    </tr>
    @if (Model != null && Model.Any())
    {
        var i = 0;
        double total = 0;
        foreach (var item in Model)
        {
            total += item.TotalPrice;
            <tr class="text-center" id="trow_@item.ProductId">
                <td>@(i + 1)</td>
                <td><a style="text-decoration: none; color:black" href="/chi-tiet/@item.Alias-p@(item.ProductId)"><img src="@item.ProductImg" width="60" /></a></td>
                <td><a style="text-decoration: none; color:black" href="/chi-tiet/@item.Alias-p@(item.ProductId)">@item.ProductName</a></td>
                <td>@item.CategoryName</td>
                <td>$@item.Price</td>
                <td><input type="number" class="form-control" id="Quantity_@item.ProductId" value="@item.Quantity" /></td>
                <th>$@item.TotalPrice</th>
                <td>
                    <a href="#" data-id="@item.ProductId" class=" btn btn-sm btn-danger btnDelete ">Delete</a>
                    <a href="#" data-id="@item.ProductId" class=" btn btn-sm btn-success btnUpdate ">Update</a>
                </td>

            </tr>
            i++;
        }
        <tr>
            <th colspan="6" class="text-right">Total:</th>
            <th class="text-center" style="color: orangered; font-size:20px">$@total</th>
        </tr>
    }


    else
    {
        <tr>
            <td colspan="7">There are no products in the cart!</td>
        </tr>
    }
</table>
