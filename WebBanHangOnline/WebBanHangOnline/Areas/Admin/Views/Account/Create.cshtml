@model WebBanHangOnline.Models.CreateAcountViewModel

@{
    ViewBag.Title = "them moi tai khoan";
}

<!-- Content Header (Page header) -->
@section naviheader {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Thêm mới tài khoản</a>
        </li>

    </ul>


}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thêm mới tài khoản</h3>


        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false);
                @Html.AntiForgeryToken();

                <div class="form-group">
                    <lable>Tài khoản</lable>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Họ tên</lable>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Email</lable>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Phone</lable>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Role</lable>
                    @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền-", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Password</lable>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <lable>Nhập lại Password</lable>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Thêm mới</button>
                </div>

            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->